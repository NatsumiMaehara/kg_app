<div class="main events-index">
  <div class="container">
     <h1 class="events-hedding">イベント情報</h1>
      <% if @current_user %>
      　<ul class="events-menus">
     　     <li>
             <%= link_to("イベントを作成する", "/events/new") %>
           </li>
     　  </ul>
     <% else %>
       <% @events.each do |e| %>
         <div class="events-index-item">
         <%= link_to(e.content, "/events/#{e.id}") %>
         </div>
       <% end %>
    <% end %>
  </div>
</div>