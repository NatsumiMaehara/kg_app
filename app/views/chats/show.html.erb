<div class="chats_show">
   <div class="container">
       <div class="messages">
          <div class="container">
             <% @chats.each do |chat| %>
               <% if chat.sender_id == @current_user.id %>
                 <div class="right" style="text-align: right;">
                    <%= chat.message %>
                 </div>
               <% else %>
                  <div class="left" style="text-align: left;">
                    <%= chat.message %>
                  </div>
               <% end %>
              <% end %>
          </div>
       </div>
     <%= form_tag("/chats/create") do %>
            <input type="hidden" name="receiver_id" value="<%= @friend_id %>" >
         <div class="form">
             <div class="form_body">
                <textarea name="message"></textarea>
                <input type="submit" value="送信">
             </div>
         </div>
      <% end %>
   </div> 
</div>